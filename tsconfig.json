{
    "compilerOptions": {
        "noImplicitAny": true,
        "target": "esnext",
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@src/*": [
                "src/modules/*"
            ]
        },
        "declaration": true,
        "removeComments": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "esModuleInterop": true
    },
    "ts-node": {
        "esm": true,
        "compilerOptions": {
            "module": "ES6",
            "esModuleInterop": true
        }
    },
    "include": [
        "./src/*.ts",
        "./src/modules/*.ts",
        "test/tests/*.ts"
    ]
}